@model List<CourseViewModel>
@{
  ViewData["Title"] = "Index";
}


<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="card-body">
        <div class="card-title">Kurslar</div>
        <a asp-controller="Courses" asp-action="Create" class="btn btn-primary mb-3">Kurs Oluştur</a>
        @if (Model.Any())
        {
          <table class="table table-striped table-bordered">
            <thead>
              <tr>
                <th>Resim</th>
                <th>Kurs İsim</th>
                <th>Fiyat</th>
                <th>Kategorisi</th>
                <th>Süre</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              @foreach (var item in Model)
              {
                <tr>
                  <td><img style="width:72px;" class="img-thumbnail" src="@item.Picture" /></td>
                  <td>@item.Name</td>
                  <td>@item.Price</td>
                  <td>@item.Category.Name</td>
                  <td>@item.Feature.Duration</td>
                  <td><a asp-controller="Courses" asp-action="Update" asp-route-id="@item.Id" class="btn btn-success btn-sm">Güncelle</a></td>
                  <td><a asp-controller="Courses" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a></td>
                </tr>
              }
            </tbody>
          </table>
        }
        else
        {
          <div class="alert-info">
            Kurs bulunmadı
          </div>
        }

      </div>
    </div>
  </div>
</div>


