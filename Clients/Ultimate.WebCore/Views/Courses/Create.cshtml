
@{
  ViewData["Title"] = "Create";
}
@model CourseCreateInput


<div class="row">
  <div class="col-md-8 offset-md-2">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">
          Kurs Ekleme
        </h5>

        <form asp-action="Create" asp-controller="Courses" method="post" enctype="multipart/form-data">
          <div asp-validation-summary="ModelOnly">

          </div>
          <div class="mb-3">
            <label class="form-label">Kategoriler</label>
            <select asp-for="CategoryId" class="form-control" asp-items="@ViewBag.categoryList">
              <option value="">kategori seçiniz</option>
            </select>
            <span class="text-danger" asp-validation-for="CategoryId"></span>
          </div>

          <div class="mb-3">
            <label asp-for="Name" class="form-label">Kursu İsmi</label>
            <input asp-for="Name" class="form-control" />
            <span class="text-danger" asp-validation-for="Name"></span>
          </div>

          <div class="mb-3">
            <label asp-for="Price" class="form-label"></label>
            <input asp-for="Price" class="form-control" />
            <span class="text-danger" asp-validation-for="Price"></span>
          </div>

          <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span class="text-danger" asp-validation-for="Description"></span>
          </div>


          <div class="mb-3">
            <label asp-for="Feature.Duration" class="form-label"></label>
            <input asp-for="Feature.Duration" class="form-control" />
            <span class="text-danger" asp-validation-for="Feature.Duration"></span>
          </div>

          <div class="mb-3">
            <label asp-for="PhotoFormFile" class="form-label"></label>
            <input type="file" class="form-control" asp-for="PhotoFormFile" />
          </div>
          <button type="submit" class="btn btn-primary">Kaydet</button>
        </form>

      </div>
    </div>
  </div>
</div>
