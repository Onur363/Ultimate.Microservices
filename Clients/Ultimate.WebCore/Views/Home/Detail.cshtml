
@{
  ViewData["Title"] = "Details";
}

@model CourseViewModel

<div class="row">
  <div class="col-md-9">
    <div class="card">
      <img src="@Model.ShortPictureUrl" class="card-img-top" />
      <h5 class="card-title">@Model.Name</h5>
      <p class="card-text">@Model.Description</p>
    </div>
  </div>

  <div class="col-md-3">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Fiyat: @Model.Price TL</h5>
        <div class="d-grid">
          <a asp-controller="Basket" asp-action="AddBasketItem" asp-route-courseId="@Model.Id" class="btn btn-primary">Sepete Ekle</a>
        </div>
      </div>
    </div>
  </div>
